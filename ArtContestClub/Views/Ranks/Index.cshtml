@model IEnumerable<ArtContestClub.Models.Rank>

@{
    ViewData["Title"] = "Index";
}

@if(ViewData["CreateRank"] == "true")
{
    <br />
    <a class="btn btn-danger" asp-controller="Ranks" asp-action="Create">Create rank</a>
    <br />
}


<br />
<div class="container">
    <div class="row align-items-start">
        <div class="col">
            <div class="card bg-success" style="width: 100%">
                <div class="card-body text-white">
                    <h5 class="card-title">Vip 30days</h5>
                    <h6 class="card-subtitle mb-2">$2.46</h6>
                    <p class="card-text">Join how many contests you like. You can only create one ongoing contest at a time.</p>
                    <a asp-controller="Ranks" asp-action="BuyVipMonth" class="btn btn-primary">Buy now</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-success" style="width: 100%">
                <div class="card-body text-white">
                    <h5 class="card-title">Vip 365days</h5>
                    <h6 class="card-subtitle mb-2">$24.60</h6>
                    <p class="card-text">Join how many contests you like. You can only create one ongoing contest at a time.</p>
                    <a asp-controller="Ranks" asp-action="BuyVipYear" class="btn btn-primary">Buy now</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card" style="width: 100%">
                <div class="card-body bg-warning">
                    <h5 class="card-title">Premium 30days</h5>
                    <h6 class="card-subtitle mb-2 text-dark">$6.15</h6>
                    <p class="card-text">Join how many contests you like. Create how many contests you like with maximum of 100 contestants.</p>
                    <a asp-controller="Ranks" asp-action="BuyPremiumMonth" class="btn btn-primary">Buy now</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card" style="width: 100%">
                <div class="card-body bg-warning">
                    <h5 class="card-title">Premium 365days</h5>
                    <h6 class="card-subtitle mb-2 text-dark">$61.50</h6>
                    <p class="card-text">Join how many contests you like. Create how many contests you like with maximum of 100 contestants.</p>
                    <a asp-controller="Ranks" asp-action="BuyPremiumYear" class="btn btn-primary">Buy now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                Rank
            </th>
            <th>
                Buy time
            </th>
            <th>
                Expires
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expires)
            </td>
        </tr>
}
    </tbody>
</table>
