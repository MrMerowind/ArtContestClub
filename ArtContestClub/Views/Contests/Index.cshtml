@model IEnumerable<ArtContestClub.Models.Contest>

@{
    ViewData["Title"] = "Index";
}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                NSFW
            </th>
            <th>
                Skill level
            </th>
            <th>
                Capacity
            </th>
            <th>
                Contestants
            </th>
            <th>
                Deadline
            </th>
            <th>
                Branch
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if(Model != null) foreach (var item in Model) {
        if (item.IsDeleted) continue;
        if (item.IsBanned && item.OwnerEmail != User.Identity.Name) continue;
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNsfw)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkillLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxParticipants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentParticipants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                <a class="link-success" asp-action="Details" asp-route-id="@item.Id">View</a>
                @if(User.Identity.Name == item.OwnerEmail)
                {
                    <!--<a class="link-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>-->
                    <a class="link-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
