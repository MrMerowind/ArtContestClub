@model ArtContestClub.Models.Contest

@{
    ViewData["Title"] = "Search for contests";
}

<h1>Search for contest</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="None" class="text-danger"></div>
            <form asp-controller="Contests" asp-action="Index" method="get" class="form-floating">
            
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="IsNsfw" class="control-label">Show NSFW</label>
                    <input asp-for="IsNsfw" class="form-check-input" type="checkbox" value="true"/>
                    <span asp-validation-for="IsNsfw" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkillLevel" class="control-label">Skill level</label>
                    <select asp-for="SkillLevel" class="form-select">
                        <option value="1">Newbie</option>
                        <option value="2">Beginner</option>
                        <option value="3">Medium</option>
                        <option value="4">Skilled</option>
                        <option value="5">Professional</option>
                        <option value="6">Art God</option>
                        <option value="7">All</option>
                        <option value="8" selected>Any</option>
                    </select>
                    <span asp-validation-for="SkillLevel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Branch" class="control-label"></label>
                    <select class="form-select form-select-sm" asp-for="Branch">
                        <option value="1">Digital drawing</option>
                        <option value="2">Digital painting</option>
                        <option value="3">Traditional drawing</option>
                        <option value="4">Traditional painting</option>
                        <option value="5">Photography</option>
                        <option value="6">3D</option>
                        <option value="7">Other</option>
                        <option value="8" selected>Any</option>
                    </select>
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        
    </div>
</div>


@section Scripts {
    @*{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
}
