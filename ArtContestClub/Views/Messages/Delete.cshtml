@model ArtContestClub.Models.Message

@{
    ViewData["Title"] = "Delete message";
}

<h3>Are you sure you want to delete this message?</h3>
<div>
    <br />
    <div class="card" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">@(ViewData[Model.From].ToString() + " (" + @Model.From + ")")</strong>
        <small class="text-muted">@Model.CreatedDate</small>
        <a type="button" class="btn-close" aria-label="Close" asp-controller="Messages" asp-action="Delete" asp-route-id="@Model.Id"></a>
    </div>
    <div class="toast-body">
        @Model.Content
    </div>
  </div>   
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
